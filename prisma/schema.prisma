// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id    Int     @id @default(autoincrement())
  name  String
  age   Int
  belt  Belt @default(branca)
  email String  @unique
  password String

  @@map("users")
}

model Teams {
  id    Int     @id @default(autoincrement())
  team String  @unique 

  @@map("teams")
}

enum Belt {
  branca
  cinza
  amarela
  laranja
  verde
  azul
  roxa
  marrom
  preta
}

